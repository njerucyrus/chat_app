<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/message_single_layout"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/default_avator"
        android:layout_margin="10dp"
        android:id="@+id/message_user_icon"
        />
<RelativeLayout
    android:id="@+id/message_layout_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_toEndOf="@+id/message_user_icon"
    android:background="@drawable/message_text_background"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    >
    <TextView
        android:id="@+id/message_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:padding="4dp"
        />

    <ImageView
        android:layout_below="@id/message_single_text"
        android:id="@+id/image_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        />
    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_message"
        android:text="00.00"
        android:layout_alignBaseline="@id/image_message"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_alignParentEnd="true"
        android:paddingEnd="2dp"
        android:textColor="@color/colorWhite"
        android:paddingBottom="5dp"
        android:drawablePadding="2dp"
        />

</RelativeLayout>

</RelativeLayout>